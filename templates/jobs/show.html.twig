{% extends 'base.html.twig' %}

{% block base_url %}http://www.fgtechs.fr/z-pedro/wwwluxuryservices{% endblock base_url %}
{% block csrf_token %}9Tnm0YBCxgVTxoqI1HzccsU5NuE9RughZmhpzgXn{% endblock csrf_token %}
{% block favicon %}assets/img/ico/fav.png{% endblock %}

{% block body %}
<!-- Page -->
    <div class="page">
    {% include "partials/flash.html.twig" %}

        <!-- Page Header-->
        <section class="page-title page-title-bg fixed-bg overlay dark-5 padding-top-160 padding-bottom-80">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h2 class="white-text">2nd assistant position</h2>
                        <span class="white-text">Ref. 1007</span>
                        <ol class="breadcrumb">
                            <li>
                                <div class="portfolio-nav">
                                    <a href="#!" class="waves-effect waves-dark"><i class="fa fa-angle-left" aria-hidden="true"></i> Prev</a>
                                    <a href="#!" class="waves-effect waves-dark"><i class="fa fa-th-large" aria-hidden="true"></i></a>
                                    <a href="#!" class="waves-effect waves-dark">Next <i class="fa fa-angle-right" aria-hidden="true"></i></a>
                                </div>
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
        </section>

        <!-- Page Content-->
        <section class="single-project-section section-padding light-gray-bg">
            <div class="container">
                <div class="project-overview">
                    <div class="row mb-80">
                        <div class="col-xs-12 col-md-8">
                            <p class="ref grey-text no-margin">Ref. {{offer.id}}</p>
                            <h2>{{offer.jobTitle}}</h2>
                            {{offer.description|humanize}}
                        </div>

                        <div class="col-xs-12 col-md-4 quick-overview">
                            <ul class="portfolio-meta">
                                <li><span> Published at </span>{{ offer.createdAt|date('d M y') }}</li>
                                <li><span> Position </span>{{ offer.jobTitle }}</li>
                                <li><span> Contract Type </span>{{ offer.category.name }}</li>
                                <li><span> Salary </span>{{ offer.salary }} &euro;</li>
                                <li><span> Location </span>{{ offer.location }}</li>
                                <li><span> Starting date </span>{{ offer.createdAt|date('d M Y') }}</li>
                            </ul>
                            {% if completionRate < 100 %}
                            <a class="btn btn-block gradient primary mt-30 waves-effect waves-light" href="{{path("app_profile")}}">complete your profile to apply</a>
                            
                            {% elseif isApplied %}
                            <div class="btn btn-block btn-success mt-30 waves-effect waves-light">You have applied for this job</div>
                            {% else %}
                            <a class="btn btn-block gradient primary mt-30 waves-effect waves-light" href="{{path("job_apply", {slug: offer.slug, id: offer.id})}}">Apply for this job</a>
                            {% endif %}
                            
                        </div>
                    </div>
                </div>

                <nav class="single-post-navigation no-margin" role="navigation">
                    <div class="row">

                        <div class="col-xs-6 col-sm-6 col-md-4">
                            <div class="previous-post-link">
                            {% if previousOffer %}
                                <a class="btn border primary waves-effect waves-dark" href="{{path("app_job_show", {slug: previousOffer.slug, id: previousOffer.id})}}">
                                    <i class="fa fa-long-arrow-left"></i>Previous
                                </a>
                            {% endif %}
                            

                            </div>
                        </div>
                        <div class="hidden-xs hidden-sm col-md-4"></div>


                        <div class="col-xs-6 col-sm-6 col-md-4">
                            <div class="next-post-link">
                            {% if nextOffer %}
                            
                                <a class="btn border primary waves-effect waves-dark" href="{{path("app_job_show", {slug: nextOffer.slug, id: nextOffer.id})}}">
                                    Next <i class="fa fa-long-arrow-right"></i>
                                </a>
                            {% endif %}
                            </div>
                        </div>

                    </div>
                </nav>
            </div>
        </section>

    </div>
{% endblock %}
